<Window x:Class="Pract1_Florich_I223.AddEditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract1_Florich_I223"
        mc:Ignorable="d"
        Title="AddEditProductWindow" Height="720" Width="1280">
    <Grid Background="#FF2E2E2E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="934*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="163*"/>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="120*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Click="AddProductButton_Click" x:Name="AddProductButton" Content="Добавить продукт" FontFamily="Verdana" FontSize="16" Margin="292,10,292,23" Foreground="White" BorderBrush="White" Background="#FF383838" BorderThickness="2,2,2,1"/>

        <TextBox x:Name="NameTextBox" Margin="67,43,67,42" Grid.Column="1" Grid.Row="1" FontFamily="Verdana" FontSize="20"/>

        <TextBox x:Name="PriceTextBox" Margin="67,42,67,43" Grid.Column="1" Grid.Row="2" FontFamily="Verdana" FontSize="20"/>

        <TextBox x:Name="DescriptionTextBox" Margin="67,44,67,46" Grid.Column="1" Grid.Row="3" FontFamily="Verdana" FontSize="20"/>
    </Grid>
</Window>
