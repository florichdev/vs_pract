<Window x:Class="Pract1_Florich_I223.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract1_Florich_I223"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid Background="#FFF3F3F3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="934*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="106*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Click="AddProductButton_Click" x:Name="AddProductButton" Content="Добавить продукт" FontFamily="Verdana" FontSize="16" Margin="292,10,292,23" Foreground="White" BorderBrush="#FF0800FF" Background="#FF2D67DA" Width="350" Height="130"/>

        <TextBox x:Name="NameTextBox" Margin="10,43,10,42" Grid.Column="1" Grid.Row="1" FontFamily="Verdana" FontSize="20" Height="35" Width="800"/>

        <TextBox x:Name="PriceTextBox" Margin="10,42,10,43" Grid.Column="1" Grid.Row="2" FontFamily="Verdana" FontSize="20" Height="35" Width="800"/>

        <TextBox x:Name="DescriptionTextBox" Margin="10,41,10,43" Grid.Column="1" Grid.Row="3" FontFamily="Verdana" FontSize="20" Height="35" Width="800"/>
    </Grid>
</Window>
